<div class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <form asp-action="Logout" asp-controller="Account" method="post" id="logoutForm" class="navbar-right">
            <a asp-action="Profile" asp-controller="Account" class="nav-link text-dark">Hello @User.Identity.Name!</a>
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    }
    else
    {
        <a asp-action="Login" asp-controller="Account" class="nav-link text-dark">Login</a>
        <a asp-action="Register" asp-controller="Account" class="nav-link text-dark">Register</a>
    }
</div>