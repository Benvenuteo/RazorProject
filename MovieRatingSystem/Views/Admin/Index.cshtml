@model MovieRatingSystem.Models.AdminIndexViewModel

@{
    ViewData["Title"] = "Admin Panel";
}

<h2>Admin Panel</h2>

<div class="container">
    <h3>Movies</h3>
    @if (Model.Movies != null && Model.Movies.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Release Year</th>
                    <th>Rating</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model.Movies)
                {
                    <tr>
                        <td>@movie.Title</td>
                        <td>@movie.ReleaseYear</td>
                        <td>@movie.Rating</td>
                        <td>
                            <form asp-action="DeleteMovie" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@movie.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No movies found.</p>
    }

    <h3>TV Shows</h3>
    @if (Model.TvShows != null && Model.TvShows.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tvShow in Model.TvShows)
                {
                    <tr>
                        <td>@tvShow.Title</td>
                        <td>
                            <form asp-action="DeleteTvShow" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@tvShow.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No TV shows found.</p>
    }

    <div class="mt-3">
        <a asp-action="AddMovie" class="btn btn-primary">Add Movie</a>
        <a asp-action="AddTvShow" class="btn btn-primary">Add TV Show</a>
    </div>
</div>